<%- include('../layouts/cabecera.ejs'); %>



<div class="card">
    <div class="card-body">
     <h4 class="card-title">Editar informacion de libro</h4>
     <p class="card-text">
     
        <form method="post" action="../actualizar/" enctype="multipart/form-data">


            <input type="text" name="id" value="<%=libro.id%>">
        
        
        
            <div class="form-group">
              <label for="my-input">Nombre:</label>
              <input type="text" value="<%=libro.nombre%>" name="nombre" id="" class="form-control" >

              <label for="my-input">Precio:</label>
              <input type="text" value="<%=libro.precio%>" name="precio" id="" class="form-control" >
             
        
                <div class="form-group">
                  <label for="my-input">Imagen</label>
                  <img class="img.thumbnail" src="../../images/<%=libro.imagen%>" width="100">
                </div>
        
                <div class="form-group">
                    <label for="my-input">Imagen</label>
                    <input type="file" class="form-control-file" name="archivo" id="my-input"  >
                  </div>
        
        
        <button class="btn btn-success" type="submit">Actualizar</button>
        <a class="btn btn-primary" href="/libros"> Cancelar</a>
        
            </div>
        
        
        
        </form>
    
   </p>
   </div>
 </div>




